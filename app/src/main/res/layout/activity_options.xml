<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.OptionsActivity">


    <TextView
        android:id="@+id/txtGallery"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/shape_btn"
        android:drawablePadding="14dp"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:paddingHorizontal="21dp"
        android:text="@string/gallery"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@color/accent"
        app:drawableStartCompat="@drawable/ic_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCamera"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_btn"
        android:drawablePadding="14dp"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:paddingHorizontal="21dp"
        android:text="@string/camera"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@color/accent"
        app:drawableStartCompat="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/txtSkip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/or_skip_some_steps_and_add_a_video_without_edits"
        android:textColor="@color/secondary"
        android:textSize="18sp" />

</LinearLayout>